<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>e-Commerce</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>Servlet</servlet-name>
    <servlet-class>eCommerce.controle.web.Servlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/Servlet</url-pattern>
  </servlet-mapping>

  <!-- Estados -->
  <servlet-mapping>
  	<servlet-name>Servlet</servlet-name>
  	<url-pattern>/Estado/ConsultaEstado</url-pattern>
  </servlet-mapping>
  <!-- Cidades -->
  <servlet-mapping>
  	<servlet-name>Servlet</servlet-name>
  	<url-pattern>/Cidade/ConsultaCidade</url-pattern>
  </servlet-mapping>
  <!-- Livros -->
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/Livro/FormLivro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/Livro/ListaLivro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
  	<url-pattern>/Livro/CriarLivro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
  	<url-pattern>/Livro/AlterarLivro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
  	<url-pattern>/Livro/EditarLivro</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
  	<url-pattern>/Livro/ExcluirLivro</url-pattern>
  </servlet-mapping>  
    <!-- Clientes -->
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/Cliente/FormCliente</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
    <url-pattern>/Cliente/ListaCliente</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
  	<url-pattern>/Cliente/CriarCliente</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Servlet</servlet-name>
  	<url-pattern>/Cliente/EditarCliente/*</url-pattern>
  </servlet-mapping>
</web-app>